<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:src="@drawable/blank_profile_picture"
        app:civ_border_color="#a4bfbbbb"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/card_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="66dp"
        android:layout_toEndOf="@+id/card_name2"
        android:text="10 Lakhs"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/card_name2"
        android:layout_below="@+id/card_name2"
        android:layout_marginTop="16dp"
        android:text="Percentage Marks"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/card_name3"
        android:layout_alignBottom="@+id/card_name3"
        android:layout_alignStart="@+id/card_income"
        android:text="100%"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/card_image"
        android:text="Income is"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/card_image"
        android:layout_alignEnd="@+id/card_name2"
        android:layout_marginBottom="11dp"
        android:text="Your Name"
        android:textColor="#1d3fc7"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>

</android.support.v7.widget.CardView>
